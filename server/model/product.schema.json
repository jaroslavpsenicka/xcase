{
  "$id": "http://datacase.org/schemas/schema.json",
  "type": "object",
  "required": ["name", "label", "icon", "description", "overviewComponentUrl", "createComponentUrl", "actions"],
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string"
    },
    "label": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "icon": {
      "type": "string"
    },
    "overviewComponentUrl": {
      "type": "string"
    },
    "createComponentUrl": {
      "type": "string"
    },
    "actions": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "create": { "$ref": "common.json#/definitions/Action" },
        "update": { "$ref": "common.json#/definitions/Action" }
      }
    }
  }
}